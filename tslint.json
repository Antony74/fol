{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {  
        "max-classes-per-file": false,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "no-var-requires": false,
        "object-literal-shorthand": false,
        "quotemark": [true, "single"],
        "trailing-comma": [true, "never"]
    },
    "rulesDirectory": []
}